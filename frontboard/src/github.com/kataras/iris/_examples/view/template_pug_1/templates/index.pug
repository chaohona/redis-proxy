doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title Title
	body
		p ads
		ul
			li The name is {{.Name}}.
			li The age is {{.Age}}.

		each _,_ in .Emails
			div An email is {{.}}

		| {{ with .Jobs }}
			each _,_ in .
				div
				 An employer is {{.Employer}}
				 and the role is {{.Role}}
		| {{ end }}